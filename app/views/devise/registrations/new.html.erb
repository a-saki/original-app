<%= render "devise/shared/links" %>
<h2 class="mod-ttl">新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="row">
  <div class="form-inline">
    <%= f.label :name, class: "mod-label col-md-4" %>
    <%= f.email_field :name, autofocus: true, class: "form-control col-md-4" %>
  </div>
  </div>
  
  <div class="row">
  <div class="form-inline">
    <%= f.label :email, class: "mod-label col-md-4" %>
    <%= f.email_field :email, autofocus: true, class: "form-control col-md-4" %>
  </div>
  </div>
  
  <div class="row">
  <div class="form-inline">
    <%= f.label :password, class: "mod-label col-md-2" %>
    <% if @minimum_password_length %>
    <em class=" col-md-2">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "off", class: "form-control"  %>
  </div>
  </div>
  
  <div class="row">
  <div class="form-inline">
    <%= f.label :password_confirmation, class: "mod-label col-md-4" %>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control"  %>
  </div>
  </div>

  <div class="actions">
    <%= f.submit "登録する", class: "btn btn-default" %>
  </div>
<% end %>


